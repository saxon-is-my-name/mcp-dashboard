{
  "name": "vscode-mcp-extension",
  "displayName": "MCP Extension",
  "description": "VS Code extension for MCP dashboard integration.",
  "version": "0.0.1",
  "publisher": "mcp-dashboard",
  "engines": {
    "vscode": ">=1.109.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/src/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mcp-dashboard",
          "title": "MCP Dashboard",
          "icon": "$(server)"
        }
      ]
    },
    "views": {
      "mcp-dashboard": [
        {
          "type": "webview",
          "id": "mcpView",
          "name": "Servers & Commands",
          "icon": "$(server)"
        },
        {
          "id": "mcpToolTree",
          "name": "Tools",
          "type": "tree"
        },
        {
          "id": "mcpToolDetail",
          "name": "Tool Details",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "mcp.showView",
        "title": "Show MCP View"
      },
      {
        "command": "mcp.selectTool",
        "title": "Select Tool"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && npm run build:webview",
    "watch": "tsc -watch -p ./",
    "build:webview": "webpack --mode production",
    "watch:webview": "webpack --mode development --watch",
    "test": "npm run compile && xvfb-run -a --server-args='-screen 0 1280x1024x24' node ./test/suite/index.js",
    "test:ui": "jest",
    "unit-test": "npm run compile && mocha -r ts-node/register test/unit/**/*.test.ts"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.29.0",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@babel/register": "^7.28.6",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/jest": "^30.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.0.0",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@types/sinon": "^21.0.0",
    "@types/vscode": "^1.109.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/test-electron": "^2.5.2",
    "babel-preset-react": "^6.24.1",
    "babel-preset-typescript": "^7.0.0-alpha.19",
    "css-loader": "^7.1.3",
    "eslint": "^8.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "mocha": "^10.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "sinon": "^21.0.1",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0",
    "webpack": "^5.105.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.0.0"
  }
}
