{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2020",
		"outDir": "out",
		"lib": ["es2020", "dom"],
		"sourceMap": true,
		"rootDir": ".",
		"strict": true,
		"esModuleInterop": true,
		"jsx": "react-jsx",
		"types": ["node", "vscode", "mocha"],
		"noUnusedLocals": true,
		"noUnusedParameters": true
	},
	"exclude": ["node_modules", ".vscode-test", "out", "test/**/*.ui.test.*", "**/*.ui.test.*"]
}
